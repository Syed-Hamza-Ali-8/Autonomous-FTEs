# ============================================================================
# AI Employee Vault - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!
# ============================================================================

# ============================================================================
# GENERAL SETTINGS
# ============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
VAULT_PATH=/path/to/your/vault

# ============================================================================
# ODOO ACCOUNTING (Gold Tier)
# ============================================================================
ODOO_URL=http://localhost:8069
ODOO_DB=ai_employee_accounting
ODOO_USERNAME=api@aiemployee.local
ODOO_PASSWORD=

# Mock mode for development without real Odoo server
USE_MOCK_ODOO=true

# ============================================================================
# SOCIAL MEDIA PLATFORMS
# ============================================================================
# Mock mode for development without real social media APIs
SOCIAL_MEDIA_MOCK=true

# Facebook Configuration
FACEBOOK_ACCESS_TOKEN=
FACEBOOK_PAGE_ID=

# Instagram Configuration
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=
INSTAGRAM_BUSINESS_ACCOUNT_ID=

# Twitter (X) Configuration
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
TWITTER_BEARER_TOKEN=

# ============================================================================
# ERROR RECOVERY SETTINGS
# ============================================================================
MAX_RETRY_ATTEMPTS=3
BASE_RETRY_DELAY=1
MAX_RETRY_DELAY=60

# ============================================================================
# AUDIT LOGGING SETTINGS
# ============================================================================
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_PATH=./Logs

# ============================================================================
# HEALTH MONITORING
# ============================================================================
HEALTH_CHECK_INTERVAL=60
MCP_TIMEOUT=5

# ============================================================================
# CEO BRIEFING SETTINGS
# ============================================================================
CEO_BRIEFING_ENABLED=true
CEO_BRIEFING_SCHEDULE=0 7 * * 0
CEO_BRIEFING_PATH=./Reports/CEO_Briefings
REVENUE_TARGET_MONTHLY=10000

# ============================================================================
# MCP SERVER SETTINGS
# ============================================================================
# Odoo MCP Server
ODOO_MCP_HOST=localhost
ODOO_MCP_PORT=3002

# Social Media MCP Server
SOCIAL_MCP_HOST=localhost
SOCIAL_MCP_PORT=3001
